<p id="notice"><%= notice %></p>

<h1>
  <%= @category.name %>
</h1>

<% @category.posts.each do |post| %>
  <p>
    <strong><%= post.title %></strong>
  </p>

  <p>
    <%= post.body %>
  <p>

  <hr>
<% end %>

<h2>Add a post:</h2>
<%= form_with(model: [ @category, @category.posts.build ], local: true) do |form| %>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', categories_path %>
